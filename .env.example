# OpenAI API (for content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Google Maps API (for wine producer geolocation)
GOOGLE_MAPS_API_KEY=your_maps_api_key

# Google Cloud Storage (for photos, documents, and other assets)
# CHOOSE ONE setup method:
#   ./infrastructure/gcp/setup-home-directory.sh     (recommended - credentials in ~/.gcp/)
#   ./infrastructure/gcp/setup-existing-project.sh   (alternative - credentials in .secrets/)

GCS_BUCKET_NAME=grapegeek-data
GCS_PROJECT_ID=astral-oven-392317
GCS_BASE_URL=https://storage.googleapis.com/grapegeek-data

# Credentials path - PICK ONE:
GCS_CREDENTIALS_PATH=/Users/phil/.gcp/grapegeek-credentials.json    # Home directory (recommended)
# GCS_CREDENTIALS_PATH=./.secrets/gcs-credentials.json              # Project directory (alternative)

# Specific asset paths (using bucket prefixes)
GCS_VARIETY_PHOTOS_PATH=photos/varieties
GCS_PRODUCER_PHOTOS_PATH=photos/producers
GCS_DOCUMENTS_PATH=documents

# Optional: Image optimization settings
PHOTO_MAX_WIDTH=2048
PHOTO_QUALITY=85
PHOTO_GENERATE_THUMBNAILS=true
PHOTO_THUMBNAIL_WIDTH=400